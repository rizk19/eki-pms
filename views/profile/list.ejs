<% include ../partial/header %>

<h1 style="font-weight: bold;margin-top:15px;margin-left:30px">Profile</h1>
<hr>

<div class="container">
    <form method="post">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="email" name="email" placeholder="Email"
                    value="<%= user.email %>" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="password" name="password" placeholder="Password">
            </div>
        </div>
        <!-- position-radio -->
        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Position</legend>
            <fieldset id="position-radio" class="col-form-label col-sm-10 pt-0">
                <div class="col-sm-10">
                    <div class="custom-control custom-radio my-1 mr-sm-2">
                        <input class="custom-control-input" type="radio" name="position" id="position-radio1"
                            value="manager" <%= (pro.position == 'manager') ? 'checked' : '' %>>
                        <label class="custom-control-label" for="position-radio1">
                            Manager
                        </label>
                    </div>
                    <div class="custom-control custom-radio my-1 mr-sm-2">
                        <input class="custom-control-input" type="radio" name="position" id="position-radio2"
                            value="software" <%= (pro.position == 'software') ? 'checked' : '' %>>
                        <label class="custom-control-label" for="position-radio2">
                            Software Developer
                        </label>
                    </div>
                    <div class="custom-control custom-radio my-1 mr-sm-2">
                        <input class="custom-control-input" type="radio" name="position" id="position-radio3"
                            value="quality" <%= (pro.position == 'quality') ? 'checked' : '' %>>
                        <label class="custom-control-label" for="position-radio3">
                            Quality Assurance
                        </label>
                    </div>
                </div>
            </fieldset>

        </div>
        <div class="form-group row">
            <legend class="col-form-label col-sm-2 pt-0">Working Status</legend>
            <fieldset id="status-radio" class="col-form-label col-sm-10 pt-0">
                <div class="col-sm-10">
                    <% if(pro.working_status == 'parttime'){ %>
                    <div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input class="custom-control-input" type="checkbox" name="working_status" id="checkbox1"
                            value="fulltime">
                        <label class="custom-control-label" for="checkbox1">
                            Wants to be a Full Timer
                        </label>
                    </div>
                    <%} else if(pro.working_status == 'fulltime'){ %>
                    <div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input class="custom-control-input" type="checkbox" name="working_status" id="checkbox2"
                            value="parttime">
                        <label class="custom-control-label" for="checkbox2">
                            Wants to be a Part Timer
                        </label>
                    </div>
                    <% } %>
                </div>
            </fieldset>
        </div>
        <button type="submit" class="btn btn-outline-primary" onclick="return confirm('Update Data?')">Update</button>
    </form>
</div>

<% include ../partial/footer %>