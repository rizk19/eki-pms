<body class="text-center">
    <form class="form-signin" action="send" method="post">

        <h4 class="h4 mb-2 font-weight-normal">Forgot Password Request</h4>
        <h6 class="text-left h6 mb-0 font-italic"></h6>
        <h6 class="h6 mb-1 font-weight-normal">Enter Your Email User</h6>
        <label for="inputEmailUser" class="sr-only">User Email</label>
        <input type="email" id="useremail" name="useremail" class="form-control" placeholder="User Email" required>
        <h6 class="text-left h6 mb-3 font-italic">Eg: master@admin.com</h6>
        
        <h6 class="h6 mb-1 font-weight-normal">Email Account you want to receive</h6>
        <label for="inputEmailAccount" class="sr-only">Email Account</label>
        <input type="text" id="emailaccount" name="emailaccount" class="form-control" placeholder="Email Account" required>
        <h6 class="text-left h6 mb-3 font-italic">Eg: rizkiahf@gmail.com</h6>

        <button class="btn btn-lg btn-outline-info btn-block" type="submit" onclick="return confirm('Are you sure want to change your former password?')">Change Password!</button>
        <a class="btn btn-lg btn-secondary btn-block" href="/login">Back to Sign In</a>
